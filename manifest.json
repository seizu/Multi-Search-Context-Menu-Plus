{
  "manifest_version": 2,
  "name": "Multi Search Context Menu Plus",
  "version": "1.3.1",
  "description": "Search selected or custom text on configurable websites via context menu or hotkey",
  "author": "seizu",
  "homepage_url": "https://github.com/seizu",
  "browser_specific_settings": {
    "gecko": {
      "id": "{8f117c2e-91b3-135a-a8e6-1c9d1f2b2e45}",
      "data_collection_permissions": {
        "required": ["none"]
      }
    }
  },
  "permissions": [
    "contextMenus",
    "storage"
  ],
  "commands": {
    "open-search-popup": {
      "suggested_key": {
        "default": "Alt+Shift+S"
      },
      "description": "Open search popup"
    }
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "icons": {
    "48": "icon48.png",
    "96": "icon96.png"
  }
}